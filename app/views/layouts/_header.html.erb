<header>
  <div class="row fullWidth">
	<nav class="top-bar" data-topbar data-no-turbolink role="navigation" data-options="is_hover: true">
	  <ul class="title-area"> 
	    <li class="name"><h1><%= link_to "Ziglee", root_path %></h1></li>
	     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
	    <li class="toggle-topbar menu-icon"><a href="javascript:;"><span>Menu</span></a></li>
	  </ul>

	  <section class="top-bar-section">
	    <!-- Right Nav Section -->
	    <ul class="right">
		  <%if logged_in? %>
		  <li class="has-dropdown">
		          <a href="#"><%= current_user[:email] %></a>
		          <ul class="dropdown">
		            <li><a href="#">Profile</a></li>
					<li><a href="#">Messages</a></li>
		          </ul>
		  </li>
		  <li class="divider"></li>
		  <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
		  <%else%>
	      <li><%= link_to "Log In", login_path %></li>
		  <li class="divider"></li>
		  <li><%= link_to "Register", register_path %></li>
		  <%end%>
	    </ul>
	  </section>
	</nav>
  </div> 
</header>